        <field name="simple_free_shipping" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Fedex</label>
                <dataScope>fedex_free_shipping</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Prestafy\FedexExtended\Model\Source\SalesRule\FreeShippingOptions"/>
